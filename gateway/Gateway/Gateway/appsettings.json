{
  "Kernel": {
    "Endpoints": {
      "Https": {
        "Url": "",
        "Certificate": {
          "Path": "",
          "Password": ""
        }
      }
    }  
  },
  
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Jwt": {
    "Issuer": "",
    "Audience": "",
    "Key": "",
    "AccessTokenLifetime": "",
    "RefreshTokenLifetime": ""
  },
  
  "ReverseProxy": {
    "Routes": {
      "auth-route-anonymous": {
        "ClusterId": "auth-cluster",
        "AuthorizationPolicy": "Anonymous",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          {"PathPattern": "/{**catch-all}"}
        ]
      },
      
      "auth-route-admin": {
        "ClusterId": "auth-cluster",
        "AuthorizationPolicy": "Admin",
        "Match": {
          "Path": "/api/admin/auth/{**catch-all}"
        },
        "Transforms": [
          {"PathPattern": "/{**catch-all}"}
        ]
      }
    },
    
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-destination": {
            "Address": "http://authentication-service:5001/"
          }
        }
      }
    }
  }
}
