{
  "Kernel": {
    "Endpoints": {
      "Https": {
        "Url": "",
        "Certificate": {
          "Path": "",
          "Password": ""
        }
      }
    }  
  },
  
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Jwt": {
    "Issuer": "",
    "Audience": "",
    "Key": "",
    "AccessTokenLifetime": "",
    "RefreshTokenLifetime": ""
  },
  
  "ReverseProxy": {
    "Routes": {
      "auth-route-anonymous": {
        "ClusterId": "auth-cluster",
        "AuthorizationPolicy": "Anonymous",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          {"PathPattern": "/{**catch-all}"}
        ]
      },
      
      "auth-route-admin": {
        "ClusterId": "auth-cluster",
        "AuthorizationPolicy": "Admin",
        "Match": {
          "Path": "/api/admin/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/{**catch-all}" }
        ]
      },
      
      "scientific-reports-get-post": {
        "ClusterId": "scientific-report-service-cluster",
        "AuthorizationPolicy": "Scientist",
        "Match": {
          "Path": "/reports/scientific/{**catch-all}",
          "Methods": [ "GET", "POST" ]
        },
        "Transforms": [
          { "PathPattern": "/reports/{**catch-all}" }
        ]
      },
      
      "scientific-reports-put-patch-delete": {
        "ClusterId": "scientific-report-service-cluster",
        "AuthorizationPolicy": "ReportOwner",
        "Match": {
          "Path": "/reports/scientific/{id}/{**catch-all}",
          "Methods": [ "DELETE", "PUT", "PATCH" ]
        },
        "Transforms": [
          { "PathPattern": "/reports/{id}/{**catch-all}" }
        ]
      }
    },
    
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-destination": {
            "Address": "http://authentication-service:5001/"
          }
        }
      },
      
      "scientific-report-service-cluster": {
        "Destinations": {
          "default-destination": {
            "Address": "http://scientific-reports-service:5002/"
          }
        }
      }
    }
  }
}
